<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hệ thống\nQuản lý Thư viện"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <!-- Nhân viên -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhân viên" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtNhanVien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nhập tên nhân viên"
            android:text="Nguyen Van A"/>

        <Button
            android:id="@+id/btnDoiNhanVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi"/>
    </LinearLayout>

    <!-- Danh sách sách -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách sách"
        android:paddingTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/chkSach1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sách 01"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/chkSach2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sách 02"
            android:checked="true"/>
    </LinearLayout>

    <!-- Nút Thêm -->
    <Button
        android:id="@+id/btnThem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm"
        android:layout_marginTop="16dp"/>

</LinearLayout>
